# Security and Performance Headers for Hotels Sifnos

/* 
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  
  # HSTS - HTTP Strict Transport Security
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  
  # Cross-Origin Policies
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: cross-origin
  Cross-Origin-Embedder-Policy: unsafe-none
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://googleads.g.doubleclick.net https://www.google.com https://www.google.nl https://assets.mailerlite.com https://cdn.gpteng.co https://wdzlruiekcznbcicjgrz.supabase.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://wdzlruiekcznbcicjgrz.supabase.co https://www.google-analytics.com https://www.googletagmanager.com https://assets.mailerlite.com; frame-src 'self' https://www.google.com https://www.googletagmanager.com; object-src 'none'; base-uri 'self'; form-action 'self';

